// Theme
// true => Dark
// false => Light


// Color Palette 
primary = #062863
primary-variant = #1c4c96

secondary = #607ec9

// Theme
warning = #e0b0ff
danger = #f1d7ff


// Light/Dark
theme = true
light = #FFFFFF
dark = #095579

// Background content
content = #f2f2f2
content-base = #FFFFFF

// Text
info = #B5F1FF

// Utils
color-theme(reverse=false)
    theme != reverse ?  light : dark

content-theme()
    theme ? content : reverse(content)

content-base-theme()
    theme ? content-base : reverse(content-base)

// Background colors
colors = { primary: primary, secondary: secondary, warning: warning, danger: danger }

